{% extends 'base.html.twig' %}

{% block body %}

	<div class="overflow-hidden bg-white shadow sm:rounded-lg my-12 mx-36">
		<div class="px-4 py-5 sm:px-6">
			<h2 class="text-3xl font-bold tracking-tight text-gray-900">{{disponibilite.service.name}}</h2>
			<h3 class="text-base font-semibold leading-6 text-gray-900">By
				{{disponibilite.host.firstName}}
				{{disponibilite.host.lastName}}</h3>
			<p class="mt-1 max-w-2xl text-sm text-gray-500">Available from
				{{disponibilite.beginDateDispo | date("d/m/Y") }}
				to
				{{disponibilite.endDateDispo | date("d/m/Y")}}</p>
		</div>
		<div class="border-t border-gray-200">
			<div class="px-36 py-36">
				<form method="post" accept-charset="UTF-8" action="{{ path('create_reservation') }}">
					{% if categorie != "Accommodation" %}
						<label for="beginDate" class="block text-sm text-gray-500">Choose exact date</label>
						<input id="beginDate" class="block  mt-2 w-full placeholder-gray-400/70 rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 " type="date" name="beginDate" value="{{ disponibilite.beginDateDispo | date("Y/m/d") }}" min="{{disponibilite.beginDateDispo | date("Y/m/d")}}" max="{{disponibilite.endDateDispo| date("Y/m/d")}}">
                        

					{% else %}
						Choose exact dates:
						<div>
							<label for="beginDate" class="block text-sm text-gray-500 ">Arrival Date</label>
							<input id="beginDate" class="block  mt-2 w-full placeholder-gray-400/70 rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40" type="date" name="beginDate" value="{{ disponibilite.beginDateDispo | date("Y/m/d") }}" min="{{ disponibilite.beginDateDispo | date("Y/m/d")}}" max="{{disponibilite.endDateDispo | date("Y/m/d")}}">
						</div>
						<div>
							<label for="endDate" class="block text-sm text-gray-500 ">Departure Date</label>
							<input id="endDate" class="block  mt-2 w-full placeholder-gray-400/70 rounded-lg border border-gray-200 bg-white px-5 py-2.5 text-gray-700 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40" type="date" name="endDate" value="{{ disponibilite.endDateDispo | date("Y/m/d") }}" min="{{ disponibilite.beginDateDispo | date("Y/m/d")}}" max="{{disponibilite.endDateDispo | date("Y/m/d")}}">
						</div>
					{% endif %}
					<input for="disponibilite" name="disponibilite" value="{{disponibilite.id}}" hidden>
					<input type="submit" value="Book this service" class="px-6 py-2 my-6 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-lg hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
				</form>
			</div>
		</div>
	</div>
{% endblock %}
